---
import { Font } from "astro:assets";

import "@/assets/styles/prose.css";
import "@/assets/styles/transitions.css";
import "@/global.css";

import ThemeProvider from "@/components/widgets/theme-provider.astro";
---

<!doctype html>
<html
  lang="en"
  class:list={["scheme-light dark:scheme-dark", "motion-safe:scroll-smooth"]}
  data-color-scheme="light"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="me" href="https://mastodon.social/@princemuel" />
    <meta name="fediverse:creator" content="@princemuel@mastodon.social" />
    <title>Astro</title>
    <Font cssVariable="--font-family-sans" preload />
    <ThemeProvider />
  </head>
  <body
    class:list={[
      "relative flex min-h-svh flex-col",
      "font-sans text-lg font-normal antialiased",
      "bg-white text-black dark:bg-black dark:text-white",
    ]}
  >
    <main aria-labelledby="aria-headline">
      <slot />
    </main>
  </body>
</html>
