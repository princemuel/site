{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", ".netlify", "**/local/*", "**/ignored/*"],
  "compilerOptions": {
    "noErrorTruncation": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": { "@/*": ["./app/*"] }
  }
}
