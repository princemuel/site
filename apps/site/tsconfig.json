{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "astro/tsconfigs/strictest",
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "../../pkgs/db/db",
    "../../pkgs/db/prisma.config.ts"
