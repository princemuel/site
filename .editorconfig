# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
insert_final_newline = true
end_of_line = lf
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = true

# Specific settings for Rust/Python files
[{*.rs,*.py,*.toml}]
indent_size = 4

# Specific settings for some files
[{*.yml,*.yaml,*.md,*.hs,*.cabal}]
indent_size = 2

# Specific settings for Markdown files
[{*.md,*.mdx,*.mdoc}]
max_line_length = 120
trim_trailing_whitespace = false

# Specific settings for shell scripts
[{*.sh,*.bash}]
indent_style = tab
indent_size =  4

# Makefiles always use tabs for indentation
[Makefile]
indent_style = tab
indent_size = unset # Allow user-defined tab width

